<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %> 
<body>  
  
  <%- include('./partials/nav.ejs') %> 
 

  <div class="blog content">
    <h2>All Blogs</h2>

    <% if (blogs.length > 0){ %>
      <% blogs.forEach(blog => { %>
        <% console.log(blog.title) %> 
        <h3>Title : <%= blog.title %> </h3>
        <p><%= blog.snippet %> </p>
      <% }) %> 
    <% } else { %>      
      <p>Theres are no blogs to display</p>
    <% }%>
  </div>
</body>
</html>