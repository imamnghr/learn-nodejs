<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %> 
<body>  
  
  <%- include('./partials/nav.ejs') %> 
 

  <div class="blog content">
    <h2>All Blogs</h2>
    
   
    <% if (blogs.length > 0){ %>
       
      <% blogs.forEach(blog => { %>
        <a href="/blogs/<%= blog._id %> " class="wrap-blog" >
          <h3 class="title-blog"><%= blog.title %> </h3>
          <p class="desc-blog"><%= blog.snippet %> </p>
        </a>
      <% }) %> 
    <% } else { %>      
      <p>Theres are no blogs to display</p>
    <% }%>
      
  </div>
  <%- include('./partials/footer.ejs') %>
</body>
</html>